# DocSI Environment Variables Example
# Copy this file to .env and update with your values

# Data storage directory (default: ~/.docsi)
# DOCSI_DATA_DIR=/path/to/data

# Log level: debug, info, warn, error (default: debug)
# DOCSI_LOG_LEVEL=info

# Maximum concurrent requests (default: 5)
# DOCSI_MAX_CONCURRENT_REQUESTS=5

# Crawler Configuration
# DOCSI_CRAWLER_USER_AGENT=DocSI-Bot/1.0 (+https://docsi.io/bot)
# DOCSI_CRAWLER_MAX_DEPTH=3
# DOCSI_CRAWLER_MAX_PAGES=100
# DOCSI_CRAWLER_DELAY=1000
# DOCSI_CRAWLER_RESPECT_ROBOTS=true

# Database Configuration
# DOCSI_DB_TYPE=sqlite
# DOCSI_DB_CONNECTION_STRING=/path/to/docsi.db

# Vector Database Configuration
# DOCSI_VECTOR_DB_TYPE=sqlite
# DOCSI_VECTOR_DB_CONNECTION_STRING=/path/to/vectors.db
# DOCSI_VECTOR_DIMENSION=384

# Cache Configuration
# DOCSI_CACHE_ENABLED=true
# DOCSI_CACHE_TTL=3600
# DOCSI_CACHE_MAX_SIZE=100

# MCP Server Configuration
# DOCSI_MCP_NAME=docsi
# DOCSI_MCP_VERSION=1.0.0

# Security Configuration
# DOCSI_ENCRYPT_DOCUMENTS=false
# DOCSI_MAX_PATH_DEPTH=5
# DOCSI_ALLOWED_HOSTS=*

# For Qdrant vector database (if using)
# DOCSI_VECTOR_DB_TYPE=qdrant
# DOCSI_VECTOR_DB_CONNECTION_STRING=http://localhost:6333